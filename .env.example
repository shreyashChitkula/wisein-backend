# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/wisein_db"

# ============================================
# JWT
# ============================================
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# ============================================
# DIGILOCKER (India)
# ============================================
DIGILOCKER_CLIENT_ID="your-digilocker-client-id"
DIGILOCKER_CLIENT_SECRET="your-digilocker-client-secret"
DIGILOCKER_REDIRECT_URI="http://localhost:3000/auth/digilocker/callback"

# ============================================
# CASHFREE (Payment Gateway)
# ============================================
CASHFREE_APP_ID="your-cashfree-app-id"
CASHFREE_SECRET_KEY="your-cashfree-secret-key"
CASHFREE_WEBHOOK_SECRET="your-cashfree-webhook-secret"

# ============================================
# EMAIL SERVICE (using nodemailer / SMTP by default)
# ============================================
# Set to "nodemailer" to use SMTP via the SMTP_* variables below.
EMAIL_SERVICE="nodemailer" # or "sendgrid", "aws-ses"

# SMTP settings for Nodemailer (SMTP provider or SMTP relay)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_SECURE="false" # true for TLS (465), false for STARTTLS (587)
SMTP_USER="smtp-username"
SMTP_PASS="smtp-password"

# Default envelope from address
MAIL_FROM="noreply@wisein.com"

# If you want to use SendGrid later, keep this key (optional)
# SENDGRID_API_KEY="your-sendgrid-api-key"

# ============================================
# FRONTEND URLs
# ============================================
FRONTEND_URL="http://localhost:3001"
CASHFREE_SUCCESS_URL="http://localhost:3001/subscription-success"
CASHFREE_CANCEL_URL="http://localhost:3001/subscription-cancel"

# ============================================
# FILE UPLOAD
# ============================================
UPLOAD_DIR="./uploads"
MAX_VIDEO_SIZE=104857600 # 100MB in bytes

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV="development"
PORT=3000

# ============================================
# AWS (Optional - for S3 storage)
# ============================================
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_S3_BUCKET="wisein-uploads"

# ============================================
# OPENAI (Optional - for AI features like call summaries)
# ============================================
OPENAI_API_KEY="your-openai-api-key"
